<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/lineardang"
        android:layout_width="match_parent"
        android:background="@color/teal_700"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@color/teal_700"
            android:textStyle="bold"
            android:textSize="20dp"
            app:drawableLeftCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_dang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700" />
    </LinearLayout>
    <com.example.internalchat.widget.CustomViewPager
        android:id="@+id/View_pager_dang"
        android:layout_below="@id/lineardang"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</RelativeLayout>