<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="160dp"
        app:cardElevation="60dp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/item_image_recycle"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_1" />

    </androidx.cardview.widget.CardView>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:orientation="vertical">

    <TextView
        android:id="@+id/name_item_recycle"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:text="title"
        android:paddingLeft="3dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price_item_recycle"
        android:layout_width="wrap_content"
        android:textColor="@color/teal_200"
        android:text="price/thang"
        android:paddingLeft="3dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:layout_width="20dp"
        android:backgroundTint="@color/teal_200"
        android:layout_height="20dp"
        android:background="@drawable/ic_baseline_access_time_24"/>
    <TextView
        android:id="@+id/time_item_recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-21dp"
        android:textSize="17dp"
        android:layout_marginLeft="23dp"
        android:drawablePadding="5dp"
        android:textColor="#A6000000"
        android:text="timestamp"
        />
    <ImageView
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_baseline_location_on_24"/>
    <TextView
        android:id="@+id/location_item_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-21dp"
        android:textSize="17dp"
        android:layout_marginLeft="23dp"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:text="Location"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>